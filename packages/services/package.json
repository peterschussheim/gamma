{
  "name": "services",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "author": "Peter Schussheim <peter@schussheim.com> (https://peterschussheim.com/)",
  "license": "MIT",
  "scripts": {
    "start": "dotenv cross-env NODE_ENV=production cross-env DEBUG=*,-express-session*,-body-parser:*,-express:* node dist",
    "dev:verbose": "cross-env NODE_ENV=development cross-env PRISMA_DEBUG=true cross-env DEBUG=*,-snapdragon:*,-nodemon*, nodemon -r dotenv/config --watch src -e ts,js,graphql -x ts-node src/index.ts",
    "dev": "cross-env NODE_ENV=development cross-env DEBUG=*,-body-parser:*,-express:*,-snapdragon:*,-nodemon*, nodemon -r dotenv/config --watch src -e ts,js,graphql -x ts-node src/index.ts",
    "build": "yarn clean && rm -rf dist && yarn && tsc",
    "playground": "graphql playground",
    "deploy": "DEBUG=* prisma deploy -e .env",
    "get-remote-schema": "graphql get-schema --project database",
    "codegen": "graphql codegen",
    "clean": "rm -rf dist && rm -rf node_modules",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "test": "cross-env NODE_ENV=test cross-env dotenv -- jest",
    "type-check": "tsc --noEmit --pretty"
  },
  "devDependencies": {
    "@types/connect-redis": "0.0.7",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.0",
    "@types/ioredis": "3.2.9",
    "@types/jest": "23.1.1",
    "@types/jsonwebtoken": "7.2.7",
    "@types/morgan": "1.7.35",
    "@types/node": "10.3.0",
    "@types/passport": "0.4.5",
    "@types/redis": "2.8.6",
    "@types/request-promise": "4.1.41",
    "@types/useragent": "2.1.1",
    "cross-env": "5.1.6",
    "dotenv-cli": "1.4.0",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "faker": "4.1.0",
    "graphql-cli": "2.16.0",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "4.1.3",
    "prettier": "1.12.1",
    "prisma": "1.8.3",
    "supertest": "3.1.0",
    "ts-node": "6.0.5",
    "typescript": "2.8.4"
  },
  "dependencies": {
    "apollo-engine": "1.1.1",
    "apollo-errors": "1.9.0",
    "aws-sdk": "2.264.1",
    "bcryptjs": "2.4.3",
    "chalk": "2.4.1",
    "compression": "1.7.2",
    "connect-redis": "3.3.3",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "dataloader": "1.4.0",
    "debug": "3.1.0",
    "dotenv": "5.0.1",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "graphql-tools": "3.0.2",
    "graphql-yoga": "1.14.6",
    "helmet": "3.12.1",
    "hpp": "0.2.2",
    "http-proxy-middleware": "0.18.0",
    "ioredis": "3.2.2",
    "jsonwebtoken": "8.2.2",
    "keygrip": "1.0.2",
    "lodash": "4.17.10",
    "mime-types": "2.1.18",
    "morgan": "1.9.0",
    "multiparty": "4.1.4",
    "node-uuid": "1.4.8",
    "now-env": "3.0.4",
    "passport": "0.4.0",
    "passport-github2": "0.1.11",
    "prisma-binding": "2.0.2",
    "raven": "2.6.2",
    "redis": "2.8.0",
    "request-promise": "4.2.2",
    "sparkpost": "2.1.2",
    "supports-color": "5.4.0",
    "useragent": "2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.@(json|md|ts)": [
      "yarn prettier --write",
      "git add"
    ],
    "*.@(js)": [
      "yarn eslint --fix",
      "yarn prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/src/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.(ts|tsx)"
    ]
  }
}
