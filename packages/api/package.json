{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "author": "Peter Schussheim <peter@schussheim.com> (https://peterschussheim.com/)",
  "license": "MIT",
  "scripts": {
    "start": "NOW_CONFIG=./now.api.json DEBUG=*,-express-session*,-body-parser:*,-express:* node -r now-env dist",
    "dev:verbose": "NOW_CONFIG=./now.api.json cross-env NODE_ENV=development cross-env PRISMA_DEBUG=true cross-env DEBUG=*,-body-parser:*,-express:*,-snapdragon:*,-nodemon*,-ioredis:* nodemon -r now-env --watch src -e ts,js,graphql,json -x ts-node src/index.ts",
    "dev": "NOW_CONFIG=./now.api.json cross-env NODE_ENV=development cross-env DEBUG=*,-body-parser:*,-express:*,-snapdragon:*,-nodemon*, nodemon -r now-env --watch src -e ts,js,graphql -x ts-node src/index.ts",
    "build": "rm -rf ./dist && tsc && copyfiles -u 1 \"./src/**/*.graphql\" dist",
    "playground": "graphql playground",
    "deploy": "DEBUG=* prisma deploy -e .env",
    "get-remote-schema": "graphql get-schema --project database",
    "codegen": "graphql codegen",
    "clean": "rm -rf dist && rm -rf node_modules",
    "type-check": "tsc --noEmit --pretty"
  },
  "devDependencies": {
    "@types/connect-redis": "0.0.7",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.0",
    "@types/graphql": "0.13.2",
    "@types/ioredis": "4.0.0",
    "@types/jest": "23.1.1",
    "@types/jsonwebtoken": "7.2.7",
    "@types/node": "10.9.4",
    "@types/passport": "0.4.5",
    "@types/request-promise": "4.1.41",
    "@types/sparkpost": "2.1.4",
    "@types/useragent": "2.1.1",
    "copyfiles": "2.0.0",
    "cross-env": "5.1.6",
    "eslint": "4.19.1",
    "eslint-config-prettier": "3.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "faker": "4.1.0",
    "graphql-cli": "2.16.7",
    "husky": "0.14.3",
    "lint-staged": "7.2.2",
    "mailslurp-client": "0.1.1514850454",
    "nodemon": "^1.18.4",
    "npm-run-all": "4.1.3",
    "prettier": "1.14.3",
    "prisma": "1.16.0",
    "rimraf": "2.6.2",
    "supertest": "3.1.0",
    "ts-node": "7.0.1",
    "typescript": "3.1.4"
  },
  "dependencies": {
    "@octokit/rest": "15.17.0",
    "apollo-errors": "1.9.0",
    "aws-sdk": "2.264.1",
    "bcryptjs": "2.4.3",
    "chalk": "2.4.1",
    "compression": "1.7.2",
    "connect-redis": "3.3.3",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "debug": "4.0.0",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "graphql": "0.13.2",
    "graphql-tools": "3.1.1",
    "graphql-yoga": "1.16.2",
    "helmet": "3.13.0",
    "hpp": "0.2.2",
    "http-proxy-middleware": "0.19.0",
    "ioredis": "4.0.0",
    "jsonwebtoken": "8.2.2",
    "keygrip": "1.0.2",
    "lodash": "4.17.10",
    "mime-types": "2.1.18",
    "multiparty": "4.1.4",
    "node-uuid": "1.4.8",
    "now-env": "3.1.0",
    "passport": "0.4.0",
    "passport-github2": "0.1.11",
    "prisma-binding": "2.1.5",
    "raven": "2.6.4",
    "request-promise": "4.2.2",
    "sparkpost": "2.1.2",
    "useragent": "2.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/src/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.(ts|tsx)"
    ]
  }
}
