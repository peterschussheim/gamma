{
  "compilerOptions": {
    "target": "es2017",
    "strict": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules"]
}
