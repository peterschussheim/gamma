{
  "name": "gamma",
  "version": "0.0.0",
  "private": true,
  "author": "Peter Schussheim <peter@schussheim.com> (https://peterschussheim.com/)",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/peterschussheim/gamma"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "web/react-scripts",
      "monaco-editor/react-scripts-ts"
    ]
  },
  "engines": {
    "node": ">=9.11.1",
    "yarn": ">=1.4.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --loglevel=info",
    "start:api": "yarn workspace api dev",
    "start:web": "yarn workspace web start",
    "start:web:inspect": "yarn workspace web start:inspect",
    "start:shared": "yarn workspace @peterschussheim/shared start",
    "prebuild": "yarn clean:build",
    "build": "lerna exec --stream --parallel -- yarn build",
    "build:shared": "yarn workspace @peterschussheim/shared build",
    "reset-modules": "rm -rf node_modules/ yarn.lock packages/*/node_modules",
    "reset-yarn": "yarn cache clean",
    "reset-cache": "yarn reset-yarn",
    "reset": "yarn reset-modules && yarn reset-cache",
    "clean": "lerna clean --yes",
    "clean:build": "rm -rf ./packages/*/build",
    "clean:logs": "rm -rf ./packages/*/*.log *.log",
    "xpostbuild:api": "cp api/package.json build-api/package.json && cp now.json build-api/now.json",
    "deploy": "now && now alias",
    "ls": "lerna ls",
    "changelog": "lerna-changelog",
    "release": "lerna publish",
    "jest": "jest",
    "test": "yarn run jest -- --runInBand --watch",
    "test:ci": "yarn run jest -- --forceExit --outputFile test-results.json --json --maxWorkers=2",
    "lint": "eslint packages",
    "lint:staged": "lint-staged",
    "precise-commits": "precise-commits",
    "precommit": "yarn run precise-commits",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.@(json|md|ts)": [
      "yarn prettier --write",
      "git add"
    ],
    "*.@(js)": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "devDependencies": {
    "eslint": "^4.1.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "husky": "0.14.3",
    "lerna": "^3.0.0-rc.0",
    "lint-staged": "7.2.0",
    "precise-commits": "1.0.2",
    "prettier": "1.13.5",
    "rimraf": "2.6.2"
  }
}
