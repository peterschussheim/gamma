{
  "name": "gamma",
  "version": "0.0.0",
  "private": true,
  "author": "Peter Schussheim <peter@schussheim.com> (https://peterschussheim.com/)",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/peterschussheim/gamma"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "web/react-scripts",
      "style-guide/react-scripts",
      "monaco-editor/react-scripts-ts"
    ]
  },
  "scripts": {
    "reset-modules": "rm -rf node_modules/ yarn.lock packages/*/node_modules",
    "reset-yarn": "yarn cache clean",
    "reset-cache": "yarn reset-yarn",
    "reset": "yarn reset-modules && yarn reset-cache",
    "start": "cross-env NODE_ENV=production node build-ssr/main.js",
    "start:api": "cross-env NODE_ENV=production node build-api/main.js",
    "dev:web": "cross-env NODE_PATH=./ && cd packages/web && react-scripts start",
    "dev:api": "cd packages/api && yarn dev",
    "dev:ssr": "cross-env NODE_PATH=./ cross-env NODE_ENV=development cross-env DEBUG=build*,ssr*,shared:middlewares* cross-env DIR=packages/ssr backpack",
    "build": "npm run build:web && npm run build:ssr",
    "prebuild:api": "rimraf build-api",
    "build:api": "cross-env NODE_PATH=./ cross-env DIR=api backpack build",
    "postbuild:api": "cp api/package.json build-api/package.json && cp now.json build-api/now.json",
    "prebuild:ssr": "rimraf build-ssr",
    "build:ssr": "cross-env NODE_PATH=./ cross-env DIR=ssr backpack build",
    "postbuild:ssr": "cp now.json build-ssr/now.json",
    "build:web": "cross-env NODE_PATH=./ && cd packages/web && react-scripts build",
    "deploy": "now && now alias",
    "changelog": "lerna-changelog",
    "jest": "jest",
    "test": "npm run jest -- --runInBand --watch",
    "test:ci": "npm run jest -- --forceExit --outputFile test-results.json --json --maxWorkers=2",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "precise-commits": "precise-commits",
    "precommit": "npm run precise-commits",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "webpack-defaults": "webpack-defaults"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.@(json|md|ts)": [
      "yarn prettier --write",
      "git add"
    ],
    "*.@(js)": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "babel-jest": "^22.4.4",
    "babel-plugin-import-inspector": "^2.0.0",
    "babel-plugin-inline-import-graphql-ast": "^2.0.4",
    "babel-plugin-syntax-async-generators": "^6.13.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-async-generator-functions": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "bundle-buddy-webpack-plugin": "0.3.0",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "husky": "0.14.3",
    "lerna": "^3.0.0-rc.0",
    "lint-staged": "7.2.0",
    "precise-commits": "1.0.2",
    "prettier": "1.13.5",
    "prop-types": "15.6.1",
    "raven": "2.6.3",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "sw-precache-webpack-plugin": "0.11.5",
    "webpack-bundle-analyzer": "2.13.1",
    "write-file-webpack-plugin": "4.3.2"
  }
}
